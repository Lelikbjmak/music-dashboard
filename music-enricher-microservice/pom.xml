    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.innowise</groupId>
        <artifactId>music-dashboard</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>music-enricher-microservice</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>music-enricher-microservice</name>
    <description>Microservice to enrich metadata of existing track in S3 using Spotify API.</description>

    <properties>
        <java.version>17</java.version>
        <aws.version>2.20.81</aws.version>
        <camel.version>4.0.0-M3</camel.version>
        <apache-tika.version>2.8.0</apache-tika.version>
        <h2database.version>2.1.214</h2database.version>
        <testcontainers.version>1.18.0</testcontainers.version>
    </properties>

    <dependencies>

        <dependency>
            <groupId>com.innowise</groupId>
            <artifactId>camel-common</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>com.innowise</groupId>
            <artifactId>spotify-common</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-redis</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-security</artifactId>
        </dependency>

